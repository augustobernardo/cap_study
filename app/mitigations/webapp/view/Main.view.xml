<mvc:View xmlns:semantic="sap.f.semantic" controllerName="mitigations.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <!-- <Page id="page" title="{i18n>title}">
        <content>
           
        </content>
    </Page> -->

    <semantic:SemanticPage id="_IDGenSemanticPage" >
        <semantic:titleHeading>
            <Title id="_IDGenTitle" text="{i18n>title}"/>
        </semantic:titleHeading>
        <semantic:content>
            <Table id="idMitigationsTable" items="{/Mitigations}">
                <columns>
                    <Column id="_IDGenColumn">
                        <Text id="_IDGenText1" text="{i18n>mitigation.id}" />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText2" text="{i18n>mitigation.owner}" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText3" text="{i18n>mitigation.description}" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText4" text="{i18n>mitigation.timeline}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem" type="Navigation" press="onNavigateRow">
                        <cells>
                            <Text id="_IDGenText5" text="{ID}" />
                            <Text id="_IDGenText6" text="{owner}" />
                            <Text id="_IDGenText7" text="{description}" />
                            <Text id="_IDGenText8" text="{timeline}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>
